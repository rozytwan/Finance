          @Html.TextBoxFor(model => model.Name, null, new { id = "name", placeholder = "Enter Name", @class = "form-control" })<br />
     @Html.ValidationMessageFor(m => m.Name)
       
        @Html.TextBoxFor(model => model.Email, null, new { id = "email", placeholder = "Enter Email", @class = "form-control" })<br />
