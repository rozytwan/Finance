        @Html.TextBoxFor(model => model.Phone, null, new { id = "mobile", placeholder = "Enter Mobile", @class = "form-control" })<br />
        @Html.ValidationMessageFor(m => m.Phone)
        @Html.TextBoxFor(model => model.Message, null, new { id = "message", placeholder = "Enter Message", @class = "form-control" })<br />
        @Html.ValidationMessageFor(m => m.Message)
        <button type="submit" class="btn btn-success">Send</button>

